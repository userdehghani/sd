# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=myapp
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-use-minimum-32-characters
JWT_EXPIRES_IN=30d

# AWS S3 Configuration
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-aws-access-key-id
S3_SECRET_ACCESS_KEY=your-aws-secret-access-key
S3_BUCKET_NAME=myapp-avatars
S3_CDN_URL=https://cdn.example.com

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/callback/google

# Apple OAuth Configuration
APPLE_CLIENT_ID=com.example.myapp
APPLE_CLIENT_SECRET=your-apple-client-secret
APPLE_REDIRECT_URI=http://localhost:3000/api/auth/callback/apple

# PassKey/WebAuthn Configuration
PASSKEY_RP_NAME=MyApp
PASSKEY_RP_ID=localhost
PASSKEY_ORIGIN=http://localhost:3000

# Email Service (Resend) Configuration
EMAIL_API_KEY=re_your_resend_api_key
EMAIL_FROM_EMAIL=noreply@example.com
EMAIL_FROM_NAME=MyApp

# SMS Service (Melli Payamak) Configuration
SMS_USERNAME=your-melli-payamak-username
SMS_PASSWORD=your-melli-payamak-password
SMS_FROM_NUMBER=+989123456789

# Rate Limiting Configuration
RATE_LIMIT_CAPACITY=100
RATE_LIMIT_REFILL_RATE=10
